@model Response<List<MetricSystemInfo>>

<div class="form-group">
    <label class="form-label">
        Metric System
        <span class="required">*</span>
    </label>
    <select id="selectMetric" name="selectMetric" class="form-control form-control-sm">
        @if (Model != null && Model.Data != null && Model.Data.Any())
        {
            @foreach (var metric in Model.Data)
            {
                <option value="@metric.MetricSystem">@metric.MetricSystemValue</option>
            }
        }
    </select>
</div>
