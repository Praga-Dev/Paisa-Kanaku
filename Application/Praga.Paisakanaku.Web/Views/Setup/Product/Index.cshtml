@model Response<List<ProductInfo>>

@{
    ViewData["Title"] = "Product";
}

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Product</h2>
                </div>
                <div class="col-sm-6">
                    @*<a href="#addEmployeeModal" class="btn btn-primary-outline" data-toggle="modal"> </a>*@
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary-outline" onclick="onCreateProduct()">
                        <span>Create &nbsp;</span><i class="material-icons">&#xE147;</i>
                    </button>
                </div>
            </div>
        </div>
        @if (Model != null && Model.IsSuccess && Model.Data != null && Model.Data.Any())
        {
            <div id="productListContainer">
                <partial name="_ProductList.cshtml" />
            </div>
        }
        else
        {
            <p>
                NO RECORDS FOUND
            </p>
        }
    </div>
    <div>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary-outline"> <span>&#8592; &nbsp;</span> Go to Home</a>
    </div>
</div>

<div id="createProductFormContainer">
    <partial name="_CreateProduct.cshtml" model="new ProductInfo()" />
</div>

<script src="~/js/Setup/Product/product.js" asp-append-version="true"></script>
