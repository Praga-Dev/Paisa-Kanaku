@model Response<List<GroupInfo>>

<div class="action-body-container">
    <div class="main-grid-container">
        <div class="table-responsive">
            <table class="table table-bordered  align-middle">
                <thead>
                    <tr>
                        <th scope="col">Group Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.IsSuccess && Model.Data != null && Model.Data.Any())
                    {
                        @foreach (var group in Model.Data)
                        {
                            <tr>
                                <td scope="row">
                                    @if (!string.IsNullOrWhiteSpace(group.Name))
                                    {
                                        <p>@group.Name</p>
                                    }
                                </td>
                                <td class="d-flex justify-content-end">
                                    <span class="material-icons-outlined arrow btn-icon" id="btnEditGroup_@group.Id"
                                          title="Update Group" onclick="editGroup('@group.Id')">
                                        edit
                                    </span>
                                    <span class="material-icons-outlined arrow btn-icon" id="btnDeleteGroup_@group.Id"
                                          title="Delete Group" onclick="deleteGroup('@group.Id', '@group.Name')">
                                        delete
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>