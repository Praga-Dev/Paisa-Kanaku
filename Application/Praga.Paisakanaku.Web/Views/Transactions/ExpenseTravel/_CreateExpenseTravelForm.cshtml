@model ExpenseTravelInfo

@if (Model != null)
{
    <h5>Create Travel Expense</h5>
    <div id="ExpenseCreateFormContainer">
        <div class="row">
            <div class="col-sm-12">
                <form id="formCreateExpenseTravel" data-id="@Model.Id" data-expense-id="@Model.ExpenseInfoId" data-isupdate="@(Guid.Empty != Model.Id)" autocomplete="off">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="expenseDate" class="form-label">Expense Date <span class="mandatory">*</span></label>
                            <input id="expenseDate" name="expenseDate" asp-for="@Model.ExpenseDate" type="date" class="form-control form-control-sm" aria-describedby="travel-expense-date-help">
                            <div id="travel-expense-date-help" style="display:none;" class="form-text">Date should be past or present date of the expense made.</div>
                        </div>
                        <div id="memberListDDContainer" class="form-group" data-val="@Model?.ExpenseByInfo?.Id">
                            <partial name="~/Views/Common/_MemberList.cshtml" model="null" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="source" class="form-label">From  <span class="mandatory">*</span></label>
                                    <input id="source" name="source" asp-for="@Model.Source" type="text" value="@Model.Source" class="form-control form-control-sm" aria-describedby="travel-expense-source-help">
                                    <div id="travel-expense-source-help" style="display:none;" class="form-text">Enter from location. Example : Chrompet Bus Stand</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="destination" class="form-label">To  <span class="mandatory">*</span></label>
                                    <input id="destination" name="destination" asp-for="@Model.Destination" type="text" value="@Model.Destination" class="form-control form-control-sm" aria-describedby="travel-expense-destination-help">
                                    <div id="travel-expense-destination-help" style="display:none;" class="form-text">Enter to location. Example : Tambaram Railway Station</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="travelDate" class="form-label">Travel Date<span class="mandatory">*</span></label>
                                    <input id="travelDate" name="travelDate" asp-for="@Model.TravelDate" type="date" value="@(Model.TravelDate)" class="form-control form-control-sm" aria-describedby="travel-travel-date-help" min="0">
                                    <div id="travel-travel-date-help" style="display:none;" class="form-text">Enter valid travel date. Example</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="expenseAmount" class="form-label">Expense Amount <span class="mandatory">*</span></label>
                                    <input id="expenseAmount" name="expenseAmount" asp-for="@Model.ExpenseAmount" type="number" value="@(Model.ExpenseAmount)" class="form-control form-control-sm" aria-describedby="travel-expense-amount-help" min="0">
                                    <div id="travel-expense-amount-help" style="display:none;" class="form-text">Enter valid expense amount of the travel. Example : 50.95</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div id="travelServiceListDDContainer" class="form-group" data-val="@Model?.TravelServiceInfo?.TravelService">
                                    <partial name="~/Views/Common/_TravelServiceList.cshtml" model="null" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div id="transportModeListDDContainer" class="form-group" data-val="@Model?.TransportModeInfo?.TransportMode">
                                    <partial name="~/Views/Common/_TransportModeList.cshtml" model="null" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="expenseDescription" class="form-label">Description</label>
                            <textarea id="expenseDescription" name="description" asp-for="@Model.Description" type="text" class="form-control form-control-sm" aria-describedby="travel-expense-description-help" maxlength="250"></textarea>
                            <div id="travel-expense-description-help" style="display:none;" class="form-text">Description is case sensitive, ranges between 2 and 250 characters.</div>
                        </div>
                    </div>
                    <div class="pb-3 pt-3">
                        <button type="button" class="btn btn-secondary">Clear</button>
                        <button id="btnAddExpenseSubmit" type="submit" class="btn btn-primary">Add Expense</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

                
    <script src="~/js/Transactions/ExpenseTravel/expense-travel-validation.js" asp-append-version="true"></script>
}